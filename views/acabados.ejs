<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Acabados</title>
    <link rel="stylesheet" href="/css/style.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <%- include('partials/head') %>
<style>
    .encabezado {
        position: fixed;
        top: 0;
        width: 100%;
        background-color: #fff;
        z-index: 1000;
        padding: 15px 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .detalle-scroll {
        flex: 1;
        overflow-y: auto;
        padding: 40px;
        background-color: #f7f7f7;
      }

      /* Evitar scrolls innecesarios en el body */
      body {
        overflow: hidden;
        margin: 0;
        padding: 0;
      }

</style>       

</head>
<body>
    <div id="activities" style="
        border: 2px solid #BA1A1A;
        padding: 10px;
        border-radius: 6px;
        background-color: #f0f8ff;
        width: 100%;
        box-sizing: border-box;
        display: flex;
        align-items: center;
        gap: 20px; /* Espacio entre botón y título */
    ">
        <a href="/complementar?idot=<%= idot %>"  class="btn btn-success btn-sm btnind-hover-effect">Regresar...</a>
        <button 
        class="btn btn-primary btn-sm btnind-hover-effect" 
        data-toggle="modal" 
        data-target="#modalCiudad" 
        onclick="limpiarFormularioCiudad()">
        Adicionar
        </button>
    </div>
    <div class="detalle-scroll">
            <div class="d-flex justify-content-between align-items-center mb-0 px-4">
                <!-- Izquierda: Botones -->
                <div class="ms-5">
                <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalCiudad" onclick="limpiarFormularioCiudad()">Adicionar</button>
                <a href="/otrabajo" class="btn btn-success btn-sm btnind-hover-effect ms-2">Regresar...</a>
                </div>
            
                <!-- Centro: Título centrado  ok -->
                <div class="flex-grow-1 text-center">
                <h3 class="mb-2 fw-semibold d-inline-block position-relative"
                    style="letter-spacing: 1px; color: #2c3e50; font-size: 1.5rem; text-shadow: 2px 2px 5px rgba(0,0,0,0.2); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                    Ordenes de Trabajo
                    <span style="display: block; height: 3px; background-color: #3498db; margin-top: 12px; width: 100%; margin-left: auto; margin-right: auto; border-radius: 5px;"></span>
                </h3>
                </div>

                <!-- Derecha vacía para balancear -->
                <div style="width: 200px;"></div>
            </div>
          
            <% if (typeof mensaje !== 'undefined') { %>
                <div class="alert alert-<%= mensaje.tipo %> alert-dismissible fade show" role="alert" id="alertaMensaje">
                    <%= mensaje.texto %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar" style="background-color: rgb(243, 131, 131); color: white; border: none; padding: 4px 8px; border-radius: 4px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>

            <div class="container mt-2">
                <div class="content">
                    <div class="register-formAncho">           
                        <div class="container mt-4">
                            <h4 class="mb-4">Gestión de Acabados</h4>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function limpiarFormularioAcabado() {
            document.getElementById('formAcabado').reset();
        }
    </script>
</body>
</html>
