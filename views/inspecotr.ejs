<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gestión Ordenes de Trabajo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <%- include('partials/head') %>

  <style>
    .encabezado {
        position: fixed;
        top: 0;
        width: 100%;
        background-color: #fff;
        z-index: 1000;
        padding: 15px 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
.detalle-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 40px;
  background-color: #f7f7f7;
}

html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

      #main-content {
        flex: 1;
        overflow-y: auto;
      }

      /* Evitar scrolls innecesarios en el body */
      body {
        overflow: hidden;
        margin: 0;
        padding: 0;
      }

      /* Asegúrate de que la clase 'fade' tenga una transición de opacidad */
      .alert.fade {
      opacity: 1;
      transition: opacity 0.5s ease-out;
      }

      .alert.fade.show {
      opacity: 1;
      }

      .alert.fade.hide {
      opacity: 0;
      }

  /* Espacios casi eliminados entre campos */
  #modalCiudad .form-row {
    display: flex;
    align-items: center;
    margin-bottom: 4px;
  }

  #modalCiudad .form-row label {
    width: 120px;
    margin-right: 8px;
    font-size: 12px;
  }

  #modalCiudad .form-row input,
  #modalCiudad .form-row select {
    flex: 1;
    font-size: 12px;
    padding: 4px 6px;
    height: auto;
  }

  #modalCiudad .modal-body {
    padding: 10px 15px;
  }

  #modalCiudad .modal-title {
    font-size: 16px;
  }

  #modalCiudad .btn {
    font-size: 12px;
    padding: 4px 10px;
  }

  #modalCiudad .modal-dialog {
    max-width: 650px;
  }

  .input-con-sombra {
    border: 1px solid #ccc;
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .input-con-sombra:focus {
    box-shadow: 2px 2px 8px rgba(0, 123, 255, 0.4);
    outline: none;
  }

  .table {
    width: 100%;
  }

  .table-striped tbody tr:nth-of-type(odd) {
      background-color: hwb(210 84% 9%) !important;
  }

    .uniform-btn {
    min-width: 90px;
    min-height: 34px;
    font-size: 11px;
    padding: 4px 8px;
    text-align: center;
    line-height: 1.3;
    white-space: nowrap;
    flex-shrink: 0;
  }

  @media (max-width: 576px) {
    .uniform-btn {
      flex: 1 1 100%;
    }
  }
    </style>

</head>
<body>
  <div id="activities" style="
    border: 2px solid #f0f8ff;
    padding: 4px;
    border-radius: 6px;
    background-color: #aa2323;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: 20px; /* Espacio entre botón y título */
  ">
    <a href="/menuprc" class="regresar-link" style="margin-left: 20px;">Inicio</a>
    <a href="/inspasig" class="regresar-link" style="margin-left: 20px;">Regresar</a>
    <div id="datos-doc" style="margin-left: 20px; color: white;"></div>
    <div style="margin-left: auto; padding-right: 20px;">
      <h4 style="margin: 0; color: #ffffff;">Moldes JR</h4>
    </div>    
  </div>

  <div class="detalle-scroll">
         
          <% if (typeof mensaje !== 'undefined') { %>
            <div class="alert alert-<%= mensaje.tipo %> alert-dismissible fade show" role="alert" id="alertaMensaje">
              <%= mensaje.texto %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar" style="background-color: rgb(243, 131, 131); color: white; border: none; padding: 4px 8px; border-radius: 4px;">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <% } %>

          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalRegistro">
            - Registrar -
          </button>

        <div class="container-fluid mt-1">
              <div class="content2">
                <div class="register-formAnchoCM">      
                  <div class="text-md-start text-center">
                    <h4>
                      Inspecciones
                      <span style="display: block; height: 3px; background-color: #3498db; margin-top: 12px; width: 100%; margin-left: auto; margin-right: auto; border-radius: 5px;"></span>
                    </h4>



                  </div>
                  <div style="overflow-x: auto;">
                    <table class="table-striped">
                      <thead class="thead-dark">
                        <tr>
                          <th class="text-center">Orden</th>
                          <th class="text-center">Descripción</th>
                          <th class="text-center">Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (otrabajo.length > 0) { %>
                          <% otrabajo.forEach(otrabajo => { %>
                            <tr style="line-height: 1.3;">
                              <td style="width: 100px; font-size: 14px;"><%= otrabajo.idot %></td>
                              <td style="width: 600px; font-size: 15px;"><%= otrabajo.descripcion %></td>
                              <td class="text-center align-middle" style="width: 300px;">
                                <div class="d-flex justify-content-center align-items-center flex-wrap gap-1">
                                  <a 
                                    href="/inspeccion?tip_func=<%= encodeURIComponent(otrabajo.idot) %>&doc_id=<%= encodeURIComponent(otrabajo.identificador) %>&func=<%= encodeURIComponent(otrabajo.funcionario) %>"
                                    class="btn btn-secondary btn-sm icon-btn" 
                                    title="Complementar">
                                    <i class="bi bi-box-arrow-up-right"></i>
                                  </a>
                                </div>
                              </td>

                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="5">Sin Inspecciones Registradas</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
        </div>
       
  </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

      <script>
          // Activa tooltips en toda la página
          document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
              new bootstrap.Tooltip(tooltipTriggerEl)
            })
          });
      </script>

      <!-- Control Numeros en campos -->
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          // Seleccionar todos los inputs con la clase "input-numerico"
          const camposNumericos = document.querySelectorAll('.input-numerico');

          camposNumericos.forEach(function(nitInput) {
            // Evento 'input' para eliminar caracteres no numéricos
            nitInput.addEventListener('input', function () {
              this.value = this.value.replace(/\D/g, '');  // Elimina cualquier caracter que no sea dígito
              this.setCustomValidity('');  // Limpiar el mensaje de error
            });

            // Evento 'invalid' para mostrar un mensaje de error personalizado
            nitInput.addEventListener('invalid', function () {
              if (!this.validity.valid) {
                this.setCustomValidity('Por favor ingrese entre 1 y 9 dígitos numéricos.');
              }
            });

            // Evento 'change' para limpiar los errores si el valor es válido
            nitInput.addEventListener('change', function () {
              this.setCustomValidity('');
            });
          });
        });
      </script>
  
    <!-- JavaScript para enfocar el campo Nit cuando se abra el modal -->
    <script>
      $('#modalCiudad').on('shown.bs.modal', function () {
        $('#nit').trigger('focus');
      });
    </script>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const nitInput = document.getElementById('nit');
    
        nitInput.addEventListener('input', function () {
          // Elimina cualquier carácter que no sea dígito
          this.value = this.value.replace(/\D/g, '');
        });
      });
    </script>
    
    <script>

      function formatFecha(fechaTexto) {
          const fecha = new Date(fechaTexto);
          const year = fecha.getFullYear();
          const month = String(fecha.getMonth() + 1).padStart(2, '0');
          const day = String(fecha.getDate()).padStart(2, '0');
          return `${year}-${month}-${day}`;
      }

      // Auto cerrar la alerta luego de 5 segundos
      window.onload = function () {
        const alerta = document.getElementById('alertaMensaje');
        if (alerta) {
          // Eliminar la alerta después de 5 segundos
          setTimeout(() => {
            alerta.classList.remove('show');
            alerta.classList.add('hide');
            // Luego de que se desvanezca, eliminar el elemento completamente del DOM
            setTimeout(() => {
              alerta.remove();
            }, 300); // Espera a que la animación de opacidad termine antes de eliminar
          }, 2000);
        }
      };

    </script>

    <script>
      // Extraer los parámetros de la URL
      const params = new URLSearchParams(window.location.search);
      const docId = params.get("doc_id");
      const func = params.get("func");

      // Mostrar los datos en el div
      const datosDiv = document.getElementById("datos-doc");
      if (docId && func) {
        datosDiv.textContent = `${docId} | ${decodeURIComponent(func)}`;
      }

      // Asignar el doc_id al modal cuando el DOM esté cargado
      document.addEventListener('DOMContentLoaded', () => {
        const docIdInput = document.getElementById('docIdInput');
        const docIdVisible = document.getElementById('docIdVisible');

        if (docIdInput && docIdVisible && docId) {
          docIdInput.value = docId;
          docIdVisible.value = docId;
        }
      });
    </script>


    <!-- Scripts requeridos -->
      <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
      <%- include('partials/footer') %>

    <!-- Modal de Registro -->
    <div class="modal fade" id="modalRegistro" tabindex="-1" aria-labelledby="modalRegistroLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

          <form method="POST" action="/crear-sdo"> <!-- Ajusta esta ruta -->
            <div class="modal-header">
              <h5 class="modal-title" id="modalRegistroLabel">Registrar Inspección...</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
              <input type="hidden" id="docIdInput" name="doc_id">

              <div class="mb-3">
                <label for="docIdVisible" class="form-label">Documento ID:</label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="docIdVisible" 
                  readonly 
                  style="background-color: #e9ecef; color: #495057; cursor: not-allowed;">
              </div>

              <div class="mb-3">
                <label for="fechaRegistro" class="form-label">Fecha:</label>
                <input type="date" class="form-control" id="fechaRegistro" name="fecha" required>
              </div>

              <div class="mb-3">
                <label for="centroCosto" class="form-label">Centro de Costo:</label>
                  <select class="form-select" id="centroCosto" name="centro_costo" required>
                    <option value="">Seleccione...</option>
                    <% ccost.forEach(c => { %>
                      <option value="<%= c.idcc %>">
                        <%= c.idcc %> - <%= c.descripcion %>
                      </option>
                    <% }) %>
                  </select>
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
          </form>

        </div>
      </div>
    </div>


</body>
</html>
