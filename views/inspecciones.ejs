<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tabla de Verificación</title>
  <link rel="stylesheet" href="/css/style.css">
  <%- include('partials/head') %>
  <style>

    .encabezado {
        top: 0;
        width: 100%;
        background-color: #fff;
        z-index: 1000;
        padding: 15px 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    table {
      border-collapse: collapse;
      width: 100%;
      max-width: 100%;
    }
    th, td {
      border: 1px solid #444;
      padding: 8px;
      text-align: left;
      vertical-align: top;
    }
    th {
      background-color: #f0f0f0;
    }
    td[colspan] {
      font-weight: bold;
      background-color: #e8e8e8;
      text-align: left;
    }
  </style>
</head>
<body>
  <header class="encabezado">
      <%- include('partials/navigationf') %>
  </header>  
  <div class="d-flex justify-content-start align-items-center mb-0">
    <a href="/opciones" class="btn btn-success btn-sm btnind-hover-effect ms-2">Regresar...</a>
  </div>
  <br>
  <h3>Verificación - Lunes</h3>
  <table id="tabla-verificacion">
    <thead>
      <tr><th colspan="7">Lunes</th></tr>
      <tr>
        <th>No.</th>
        <th>Aspectos a verificar</th>
        <th>Si</th>
        <th>No</th>
        <th>Na</th>
        <th>Firma</th>
        <th>Observación</th>
      </tr>
    </thead>
    <tbody>
      <% inspecc.forEach(bloque => { %>
        <tr>
          <td colspan="7"><%= bloque.titulo %></td>
        </tr>
        <% bloque.items.forEach(item => { %>
          <tr>
            <td><%= item.no %></td>
            <td><%= item.aspecto %></td>
            <td style="text-align: center;"><%= item.si || '' %></td>
            <td style="text-align: center;"><%= item.no_ || '' %></td>
            <td style="text-align: center;"><%= item.na || '' %></td>
            <td><%= item.firma || '' %></td>
            <td><%= (item.observacion || '').replace(/\n/g, '<br>') %></td>
          </tr>
        <% }) %>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
