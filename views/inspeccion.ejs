<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tabla de Verificación - Semana</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.sheetjs.com/xlsx-0.19.3/package/dist/xlsx.full.min.js"></script>

  <style>
    .encabezado {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: #fff;
      z-index: 1000;
      padding: 15px 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow-x: auto;
    }

    .detalle-scroll {
      overflow-y: auto;
      padding: 0px;
      background-color: #f7f7f7;
    }    

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f7f9fc;
      color: #333;
      padding: 0;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
      background: #fff;
    }

    th, td {
      border: 1px solid #444;
      padding: 8px;
      vertical-align: top;
      white-space: normal;
    }

    th {
      background-color: #f0f0f0;
      text-align: center;
    }

    thead th {
      position: sticky;
      top: 0;
      background: #98a3aa;
      color: white;
      padding: 12px 10px;
      font-weight: 600;
  
    }

    td.center {
      text-align: center;
      width: 20px;
      word-wrap: break-word;
    }

    tbody tr:hover {
      background-color: #ecf6fd;
    }

    .titulo-bloque {
      font-weight: 600;
      font-size: 16px;
      padding: 10px 15px;
    }

    table#tabla-verificacion tbody tr td.titulo-bloque {
      background-color: #cfcbcb !important;
      font-size: 16px;
    }

    #tabla-verificacion thead th,
    #tabla-verificacion tbody td {
      font-size: 12px;
    }

    .btn-dia {
      background: linear-gradient(135deg, white  , yellow);
      color: #2b0306 !important;
      min-width: 160px; /* Aumenta desde el valor anterior (ej. 100px) */
      white-space: normal;
      text-align: center;
      font-size: 13px;
      padding: 6px 10px;
    }

    .btn-dia:hover {
      background: linear-gradient(135deg, white, white);
      transform: scale(1.03);
    }

    .col-aspecto {
      width: 35%; /* o 20%, ajusta según necesidad */
      min-width: 150px;
      text-align: left;
    }

    #tabla-verificacion td:nth-child(2) {
      width: 25%;
      min-width: 150px;
      text-align: left;
    }

    td.center, th.center {
      width: 240px;
      max-width: 40px;
      min-width: 40px;
      text-align: center;
      white-space: nowrap;
      word-break: break-word;
    }    

th.sticky-col,
td.sticky-col {
  position: sticky;
  left: 0;
  background: #98a3aa;
  z-index: 10;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
}

/* Fijar columna "Aspectos a Verificar" */
th.sticky-col-2,
td.sticky-col-2 {
  position: sticky;
  left: 60px; /* Igual al ancho de la columna anterior */
  background: #98a3aa;
  z-index: 9;
  width: 300px;
  min-width: 300px;
  max-width: 300px;
  text-align: left;
  white-space: normal; /* Permite que el texto haga salto de línea */
}

td.sticky-col {
  position: sticky;
  left: 0;
  background: #fff; /* Fondo blanco solo en body */
  z-index: 1;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
}

/* Cuerpo fijo: "Aspectos a Verificar" */
td.sticky-col-2 {
  position: sticky;
  left: 60px;
  background: #fff;
  z-index: 1;
  width: 300px;
  min-width: 300px;
  max-width: 300px;
  text-align: left;
  white-space: normal;
}

.observacion-cell {
  font-size: 12px;
  font-style: italic;
  color: rgb(133, 24, 24);
  white-space: normal;        /* Permite saltos de línea */
  word-break: break-word;     /* Rompe palabras largas si es necesario */
  text-align: left;
  max-height: 100px;
  overflow-y: auto;
}

#tabla-verificacion thead tr:first-child th:first-child,
#tabla-verificacion thead tr:first-child th:nth-child(2) {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  vertical-align: middle;
}

  </style>
</head>
<body>
  <div id="activities" style="
    border: 2px solid #f0f8ff;
    padding: 4px;
    border-radius: 6px;
    background-color: #aa2323;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: 20px; /* Espacio entre botón y título */
  ">
    <a href="/menuprc" class="regresar-link" style="margin-left: 20px;">Inicio</a>
    <a href="/inspecotr?tip_func=<%= encodeURIComponent(tip_func) %>&doc_id=<%= encodeURIComponent(doc_id) %>" class="regresar-link" style="margin-left: 20px;">Regresar</a>
    <div id="datos-doc" style="margin-left: 20px; color: white;"></div>
    <div style="margin-left: auto; padding-right: 20px;">
      <h4 style="margin: 0; color: #ffffff;">Moldes JR</h4>
    </div>    
  </div>
  <div id="activities" style="
    border: 2px solid #BA1A1A;
    padding: 10px;
    border-radius: 6px;
    background-color: #f0f8ff;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: 20px; /* Espacio entre botón y título */
  ">
    <form method="POST" action="/generar-pdfsem">
      <tr>
        <% if (dias[0]?.fecha) { %>
          <td>
              <button type="submit" class="btn btn-success btn-sm">Generar PDF</button>
              <input type="hidden" name="fecha" value="<%= dias[0]?.fecha %>" />
              <!-- Campos ocultos para enviar también doc_id y func -->
              <input type="hidden" name="doc_id" id="doc-id-hidden">
              <input type="hidden" name="func" id="func-hidden">              
              <input type="hidden" name="tip_func" id="tip-func-hidden">              

          </td>
        <% } %>  
      </tr>
    </form>

  </div>
  <div class="detalle-scroll">
    <div class="container-fluid mt-1">
      <div class="content2">
        <div class="register-formAnchoCM">  
          <h5 class="text-center">Verificación Semanal</h5>
          <table id="tabla-verificacion">
            <thead>
              <tr>
                <th rowspan="2" class="sticky-col">No.</th>
                <th rowspan="2" class="col-aspecto sticky-col-2">Aspectos a Verificar</th>
                <% dias.forEach((dia, i) => { %>
                      <th colspan="3" class="text-center">

                      <button 
                        type="button"
                        class="btn btn-sm btn-dia text-white btn-ir-a-detalle"
                        data-fecha="<%= dia.fecha %>"
                        data-tip-func="<%= tip_func %>"
                        data-doc-id="<%= doc_id %>"                        
                        style="line-height: 1.2;"
                      >
                        <div style="font-size: 1.1rem; font-weight: bold;">
                          <i class="bi bi-calendar3"></i> <%= dia.nombre %>
                        </div>
                        <div style="font-size: 0.7rem;"><%= dia.fecha %></div>
                      </button>

                    </th>
                  <% }) %>
              </tr>
              <tr>
                <% dias.forEach(() => { %>
                  <th class="center">Si</th>
                  <th class="center">No</th>
                  <th class="center">Na</th>
                <% }) %>
              </tr>
            </thead>

            <tbody>
              <% inspecc.forEach(bloque => { %>
                <tr>
                  <td colspan="<%= 2 + dias.length * 3 %>" class="titulo-bloque"><%= bloque.titulo %></td>
                </tr>
                <% bloque.items.forEach(function(item) { %>
                  <tr>
                    <td class="sticky-col"><%= item.no %></td>
                    <td class="sticky-col-2"><%= item.aspecto %></td>
                    <% dias.forEach(function(dia) {
                        var val = item.valores[dia.fecha] || {};
                        const tieneCheck = val.si || val.no_ || val.na;
                    %>
                    
                      <% if (tieneCheck) { %>
                        <td class="center"><%= val.si %></td>
                        <td class="center"><%= val.no_ %></td>
                        <td class="center"><%= val.na %></td>
                      <% } else { %>
                        <td class="center observacion-cell" colspan="3">
                          <%= val.observacion || '' %>
                      </td>
                      <% } %>

                      
                    <% }) %>
                  </tr>
                <% }) %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

<script>
  document.querySelectorAll('.btn-ir-a-detalle').forEach(boton => {
    boton.addEventListener('click', function () {
      const fecha = this.getAttribute('data-fecha');
      const tip_func = this.dataset.tipFunc;
      const doc_id = this.dataset.docId;
      if (fecha && tip_func && doc_id) {
        const url = `/detalle-dia?fecha=${encodeURIComponent(fecha)}&tip_func=${encodeURIComponent(tip_func)}&doc_id=${encodeURIComponent(doc_id)}`;
        window.location.href = url;
      } else {
        alert('Faltan datos para continuar.');
      }
    });
  });
</script>  


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const botones = document.querySelectorAll('.btn-ir-a-detalle');

    const ahoraEnBogota = new Date(
      new Intl.DateTimeFormat('en-CA', {
        timeZone: 'America/Bogota',
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      }).format(new Date())
    );
    ahoraEnBogota.setHours(0, 0, 0, 0);

    botones.forEach(boton => {
      const fechaStr = boton.dataset.fecha;
      const fechaBoton = new Date(fechaStr);
      fechaBoton.setHours(0, 0, 0, 0);

      if (ahoraEnBogota > fechaBoton) {
        // Buscar el div que contiene la fecha dentro del botón
        const divs = boton.querySelectorAll('div');
        const divFecha = Array.from(divs).find(div => div.textContent.trim() === fechaStr);

        if (divFecha) {
          divFecha.style.color = 'red'; // 'red' o 'yellow'
          divFecha.style.fontWeight = 'bold';
        }

        // También puedes desactivar el botón si quieres
        boton.style.pointerEvents = 'none';
        boton.title = 'Fecha vencida';
      }
    });
  });
</script>

<script>
  // Extraer los parámetros de la URL
  const params = new URLSearchParams(window.location.search);
  const docId = params.get("doc_id");
  const func = params.get("func");
  const tipFunc = params.get("tip_func");

  // Colocarlos en los inputs ocultos
  document.getElementById("doc-id-hidden").value = docId || "";
  document.getElementById("func-hidden").value = func || "";
  document.getElementById("tip-func-hidden").value = tipFunc || "";

  // Mostrar los datos en el div
  const datosDiv = document.getElementById("datos-doc");
  if (docId && func) {
    datosDiv.textContent = `${docId} | ${decodeURIComponent(func)}`;
  }
</script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <%- include('partials/foot') %>
  
</body>
</html>
