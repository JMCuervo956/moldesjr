<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tabla de Verificación - Semana</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <%- include('partials/head') %>

  <style>
    .encabezado {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: #fff;
      z-index: 1000;
      padding: 15px 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow-x: auto;
    }

    .detalle-scroll {
      margin-top: 120px;
      padding: 20px;
      background-color: #f7f7f7;
      overflow-x: auto;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f7f9fc;
      color: #333;
      padding: 0;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
      background: #fff;
    }

    th, td {
      border: 1px solid #444;
      padding: 8px;
      vertical-align: top;
      white-space: normal;
    }

    th {
      background-color: #f0f0f0;
      text-align: center;
    }

    thead th {
      position: sticky;
      top: 0;
      background: #2980b9;
      color: white;
      padding: 12px 10px;
      font-weight: 600;
      border-bottom: 2px solid #21618c;
    }

    td.center {
      text-align: center;
      width: 20px;
      word-wrap: break-word;
    }

    tbody tr:hover {
      background-color: #ecf6fd;
    }

    .titulo-bloque {
      font-weight: 600;
      font-size: 16px;
      padding: 10px 15px;
    }

    table#tabla-verificacion tbody tr td.titulo-bloque {
      background-color: #cfcbcb !important;
      font-size: 16px;
    }

    #tabla-verificacion thead th,
    #tabla-verificacion tbody td {
      font-size: 12px;
    }

    .btn-dia {
      background: linear-gradient(135deg, #68a75b, #dbdf12);
      color: #333 !important;
  min-width: 160px; /* Aumenta desde el valor anterior (ej. 100px) */
  white-space: normal;
  text-align: center;
  font-size: 13px;
  padding: 6px 10px;
}

    .btn-dia:hover {
      background: linear-gradient(135deg, #ffe066, #ffcc00);
      transform: scale(1.03);
    }

    .col-aspecto {
      width: 35%; /* o 20%, ajusta según necesidad */
      min-width: 150px;
      text-align: left;
    }

    #tabla-verificacion td:nth-child(2) {
      width: 25%;
      min-width: 150px;
      text-align: left;
    }

    td.center, th.center {
      width: 240px;
      max-width: 40px;
      min-width: 40px;
      text-align: center;
      white-space: nowrap;
      word-break: break-word;
    }    

th.sticky-col,
td.sticky-col {
  position: sticky;
  left: 0;
  background: #2980b9;
  z-index: 10;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
}

/* Fijar columna "Aspectos a Verificar" */
th.sticky-col-2,
td.sticky-col-2 {
  position: sticky;
  left: 60px; /* Igual al ancho de la columna anterior */
  background: #2980b9;
  z-index: 9;
  width: 300px;
  min-width: 300px;
  max-width: 300px;
  text-align: left;
  white-space: normal; /* Permite que el texto haga salto de línea */
}

td.sticky-col {
  position: sticky;
  left: 0;
  background: #fff; /* Fondo blanco solo en body */
  z-index: 1;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
}

/* Cuerpo fijo: "Aspectos a Verificar" */
td.sticky-col-2 {
  position: sticky;
  left: 60px;
  background: #fff;
  z-index: 1;
  width: 300px;
  min-width: 300px;
  max-width: 300px;
  text-align: left;
  white-space: normal;
}

.observacion-cell {
  font-size: 12px;
  font-style: italic;
  color: rgb(133, 24, 24);
  white-space: normal;        /* Permite saltos de línea */
  word-break: break-word;     /* Rompe palabras largas si es necesario */
  text-align: left;
  max-height: 100px;
  overflow-y: auto;
}
  </style>
</head>
<body>

  <header class="encabezado">
    <%- include('partials/navigationf') %>
  </header>

  <div class="detalle-scroll">
    <div class="container-fluid mt-1">
      <div class="d-flex justify-content-start align-items-center mb-3">
        <a href="/opciones" class="btn btn-success btn-sm ms-2">Regresar</a>
      </div>

      <div class="content2">
        <div class="register-formAnchoCM">  
          <h5 class="text-center">Verificación Semanal</h5>

          <table id="tabla-verificacion">
            <thead>
              <tr>
                <th rowspan="2" class="sticky-col">No.</th>
                <th rowspan="2" class="col-aspecto sticky-col-2">Aspectos a Verificar</th>
                <% dias.forEach((dia, i) => { %>
                      <th colspan="3" class="text-center">
                        <button 
                          type="button"
                          class="btn btn-sm btn-dia text-white"
                          data-bs-toggle="modal"
                          data-bs-target="#modalDia"
                          data-dia="<%= dia.nombre %>"
                          data-fecha="<%= dia.fecha %>"
                          style="line-height: 1.2;"
                        >
                          <div style="font-size: 1.1rem; font-weight: bold;"><i class="bi bi-calendar3"></i> <%= dia.nombre %></div>
                          <div style="font-size: 0.7rem;"><%= dia.fecha %></div>
                        </button>
                      </th>
                  <% }) %>
              </tr>
              <tr>
                <% dias.forEach(() => { %>
                  <th class="center">Si</th>
                  <th class="center">No</th>
                  <th class="center">Na</th>
                <% }) %>
              </tr>
            </thead>

            <tbody>
              <% inspecc.forEach(bloque => { %>
                <tr>
                  <td colspan="<%= 2 + dias.length * 3 %>" class="titulo-bloque"><%= bloque.titulo %></td>
                </tr>
                <% bloque.items.forEach(function(item) { %>
                  <tr>
                    <td class="sticky-col"><%= item.no %></td>
                    <td class="sticky-col-2"><%= item.aspecto %></td>
                    <% dias.forEach(function(dia) {
                        var val = item.valores[dia.fecha] || {};
                        const tieneCheck = val.si || val.no_ || val.na;
                    %>
                      <% if (tieneCheck) { %>
                        <td class="center"><%= val.si %></td>
                        <td class="center"><%= val.no_ %></td>
                        <td class="center"><%= val.na %></td>
                      <% } else { %>
                        <td class="center observacion-cell" colspan="3">
                          <%= val.observacion || '' %>
                      </td>
                      <% } %>
                    <% }) %>
                  </tr>
                <% }) %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Bootstrap -->
  <div class="modal fade" id="modalDia" tabindex="-1" aria-labelledby="modalDiaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form id="form-editar-dia">
          <div class="modal-header">
            <h5 class="modal-title">Editar valores para <span id="modal-dia-texto"></span></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="inputSi" class="form-label">Si</label>
              <input type="text" class="form-control" id="inputSi">
            </div>
            <div class="mb-3">
              <label for="inputNo" class="form-label">No</label>
              <input type="text" class="form-control" id="inputNo">
            </div>
            <div class="mb-3">
              <label for="inputNa" class="form-label">Na</label>
              <input type="text" class="form-control" id="inputNa">
            </div>
            <div class="mb-3">
              <label for="inputObs" class="form-label">Observación</label>
              <textarea class="form-control" id="inputObs" rows="3"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const modalDia = document.getElementById('modalDia');
    modalDia.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const dia = button.getAttribute('data-dia');
      const fecha = button.getAttribute('data-fecha');

      const modalTitle = modalDia.querySelector('#modal-dia-texto');
      modalTitle.textContent = `${dia} (${fecha})`;

      // Aquí podrías cargar valores existentes si lo necesitas
    });

    // Manejar envío del formulario
    document.getElementById('form-editar-dia').addEventListener('submit', function (e) {
      e.preventDefault();
      const si = document.getElementById('inputSi').value;
      const no = document.getElementById('inputNo').value;
      const na = document.getElementById('inputNa').value;
      const obs = document.getElementById('inputObs').value;

      console.log('Guardar:', { si, no, na, obs });

      // Cierra el modal
      const modal = bootstrap.Modal.getInstance(modalDia);
      modal.hide();
    });
  </script>

  <%- include('partials/footer') %>
</body>
</html>
