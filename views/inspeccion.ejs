<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tabla de Verificación - Semana</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.sheetjs.com/xlsx-0.19.3/package/dist/xlsx.full.min.js"></script>

  <%- include('partials/head') %>

  <style>
    .encabezado {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: #fff;
      z-index: 1000;
      padding: 15px 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow-x: auto;
    }

    .detalle-scroll {
      margin-top: 120px;
      padding: 20px;
      background-color: #f7f7f7;
      overflow-x: auto;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f7f9fc;
      color: #333;
      padding: 0;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
      background: #fff;
    }

    th, td {
      border: 1px solid #444;
      padding: 8px;
      vertical-align: top;
      white-space: normal;
    }

    th {
      background-color: #f0f0f0;
      text-align: center;
    }

    thead th {
      position: sticky;
      top: 0;
      background: #98a3aa;
      color: white;
      padding: 12px 10px;
      font-weight: 600;
  
    }

    td.center {
      text-align: center;
      width: 20px;
      word-wrap: break-word;
    }

    tbody tr:hover {
      background-color: #ecf6fd;
    }

    .titulo-bloque {
      font-weight: 600;
      font-size: 16px;
      padding: 10px 15px;
    }

    table#tabla-verificacion tbody tr td.titulo-bloque {
      background-color: #cfcbcb !important;
      font-size: 16px;
    }

    #tabla-verificacion thead th,
    #tabla-verificacion tbody td {
      font-size: 12px;
    }

    .btn-dia {
      background: linear-gradient(135deg, #e6e4df, #5e5d5a);
      color: #333 !important;
  min-width: 160px; /* Aumenta desde el valor anterior (ej. 100px) */
  white-space: normal;
  text-align: center;
  font-size: 13px;
  padding: 6px 10px;
}

    .btn-dia:hover {
      background: linear-gradient(135deg, #5e5d5a, #e6e4df);
      transform: scale(1.03);
    }

    .col-aspecto {
      width: 35%; /* o 20%, ajusta según necesidad */
      min-width: 150px;
      text-align: left;
    }

    #tabla-verificacion td:nth-child(2) {
      width: 25%;
      min-width: 150px;
      text-align: left;
    }

    td.center, th.center {
      width: 240px;
      max-width: 40px;
      min-width: 40px;
      text-align: center;
      white-space: nowrap;
      word-break: break-word;
    }    

th.sticky-col,
td.sticky-col {
  position: sticky;
  left: 0;
  background: #98a3aa;
  z-index: 10;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
}

/* Fijar columna "Aspectos a Verificar" */
th.sticky-col-2,
td.sticky-col-2 {
  position: sticky;
  left: 60px; /* Igual al ancho de la columna anterior */
  background: #98a3aa;
  z-index: 9;
  width: 300px;
  min-width: 300px;
  max-width: 300px;
  text-align: left;
  white-space: normal; /* Permite que el texto haga salto de línea */
}

td.sticky-col {
  position: sticky;
  left: 0;
  background: #fff; /* Fondo blanco solo en body */
  z-index: 1;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
}

/* Cuerpo fijo: "Aspectos a Verificar" */
td.sticky-col-2 {
  position: sticky;
  left: 60px;
  background: #fff;
  z-index: 1;
  width: 300px;
  min-width: 300px;
  max-width: 300px;
  text-align: left;
  white-space: normal;
}

.observacion-cell {
  font-size: 12px;
  font-style: italic;
  color: rgb(133, 24, 24);
  white-space: normal;        /* Permite saltos de línea */
  word-break: break-word;     /* Rompe palabras largas si es necesario */
  text-align: left;
  max-height: 100px;
  overflow-y: auto;
}

#tabla-verificacion thead tr:first-child th:first-child,
#tabla-verificacion thead tr:first-child th:nth-child(2) {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  vertical-align: middle;
}

  </style>
</head>
<body>

  <header class="encabezado">
    <%- include('partials/navigationf') %>
  </header>

  <div class="detalle-scroll">
    <div class="container-fluid mt-1">
      <div class="d-flex justify-content-start align-items-center mb-3">
        <a href="/opciones" class="btn btn-success btn-sm ms-2">Regresar</a>
      </div>

      <div class="content2">
        <div class="register-formAnchoCM">  
          <h5 class="text-center">Verificación Semanal</h5>

          <table id="tabla-verificacion">
            <thead>
              <tr>
                <th rowspan="2" class="sticky-col">No.</th>
                <th rowspan="2" class="col-aspecto sticky-col-2">Aspectos a Verificar</th>
                <% dias.forEach((dia, i) => { %>
                      <th colspan="3" class="text-center">
                      <button 
                        type="button"
                        class="btn btn-sm btn-dia text-white btn-ir-a-detalle"
                        data-fecha="<%= dia.fecha %>"
                        style="line-height: 1.2;"
                      >
                        <div style="font-size: 1.1rem; font-weight: bold;">
                          <i class="bi bi-calendar3"></i> <%= dia.nombre %>
                        </div>
                        <div style="font-size: 0.7rem;"><%= dia.fecha %></div>
                      </button>
                      </th>
                  <% }) %>
              </tr>
              <tr>
                <% dias.forEach(() => { %>
                  <th class="center">Si</th>
                  <th class="center">No</th>
                  <th class="center">Na</th>
                <% }) %>
              </tr>
            </thead>

            <tbody>
              <% inspecc.forEach(bloque => { %>
                <tr>
                  <td colspan="<%= 2 + dias.length * 3 %>" class="titulo-bloque"><%= bloque.titulo %></td>
                </tr>
                <% bloque.items.forEach(function(item) { %>
                  <tr>
                    <td class="sticky-col"><%= item.no %></td>
                    <td class="sticky-col-2"><%= item.aspecto %></td>
                    <% dias.forEach(function(dia) {
                        var val = item.valores[dia.fecha] || {};
                        const tieneCheck = val.si || val.no_ || val.na;
                    %>
                    
                      <% if (tieneCheck) { %>
                        <td class="center"><%= val.si %></td>
                        <td class="center"><%= val.no_ %></td>
                        <td class="center"><%= val.na %></td>
                      <% } else { %>
                        <td class="center observacion-cell" colspan="3">
                          <%= val.observacion || '' %>
                      </td>
                      <% } %>

                      
                    <% }) %>
                  </tr>
                <% }) %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>


<script>
  document.querySelectorAll('.btn-ir-a-detalle').forEach(boton => {
    boton.addEventListener('click', function () {
      const fecha = this.getAttribute('data-fecha');
      if (fecha) {
        console.log(fecha)
        window.location.href = `/detalle-dia?fecha=${encodeURIComponent(fecha)}`;
      }
    });
  });
</script>  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <%- include('partials/footer') %>
</body>
</html>
