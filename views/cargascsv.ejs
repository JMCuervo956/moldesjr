<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de archivos Columnas</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navigation') %>  
  <h4 style="color: rgb(2, 150, 128);">Importar Usuarios</h4>
  <div class="content">
    <input type="file" id="archivo1" accept=".csv" />
    <br><br>
    <h4>Contenido del archivo:</h4>
    <pre id="contenido-archivo"></pre>
    <table id="myTable" border="1" style="width: 70%; border-collapse: collapse; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3); border-radius: 10px; overflow: hidden; font-size: 13px; line-height: 0; margin: 0 auto; background-color: rgb(243, 242, 164);">
      <thead>
        <tr>
          <th>ID Propiedad</th>
          <th>Primer Nombre</th>
          <th>Segundo Nombre</th>
          <th>Primer Apellido</th>
          <th>Segundo Apellido</th>
          <th>Area Apto</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    <br><br>
    <a href="/cargausuarios" class="btn btn-success btn-sm">Regresar</a>
    <button id="saveButton" class="btn btn-primary btn-sm"> - Importar -</button>
  </div>      

  <script>
    function mostrarContenidoEnTabla(contenido) {
      const table = document.getElementById('myTable').getElementsByTagName('tbody')[0];
      table.innerHTML = "";  // Limpiamos la tabla antes de agregar el contenido
      const filas = contenido.split('\n');
      filas.slice(1).forEach(fila => {
        if (fila.trim() !== "") { // Validar que la fila no esté vacía
          const nuevaFila = document.createElement('tr');
          const celdas = fila.split(';'); // Dividimos la fila en columnas
          if (celdas.length >= 3) {
            const nuevaCeldaIP = document.createElement('td');
            const nuevaCeldaPN = document.createElement('td');
            const nuevaCeldaSN = document.createElement('td');
            const nuevaCeldaPA = document.createElement('td');
            const nuevaCeldaSA = document.createElement('td');
            const nuevaCeldaAA = document.createElement('td');

            nuevaCeldaIP.textContent = celdas[0].trim();
            nuevaCeldaPN.textContent = celdas[1].trim();
            nuevaCeldaSN.textContent = celdas[2].trim();
            nuevaCeldaPA.textContent = celdas[3].trim();
            nuevaCeldaSA.textContent = celdas[4].trim();
            nuevaCeldaAA.textContent = celdas[5].trim();

            nuevaFila.appendChild(nuevaCeldaIP);
            nuevaFila.appendChild(nuevaCeldaPN);
            nuevaFila.appendChild(nuevaCeldaSN);
            nuevaFila.appendChild(nuevaCeldaPA);
            nuevaFila.appendChild(nuevaCeldaSA);
            nuevaFila.appendChild(nuevaCeldaAA);

            table.appendChild(nuevaFila);
          }
        }
      });
    }

    function leerArchivo(e) {
      const archivo = e.target.files[0];
      if (!archivo) {
        return;
      }
      const lector = new FileReader();
      lector.onload = function(e) {
        const contenido = e.target.result;
        mostrarContenidoEnTabla(contenido);
      };
      lector.readAsText(archivo);
    }

    document.querySelector('#archivo1').addEventListener('change', leerArchivo, false);
  </script>

  <script type="module">
    import { saveTableData2 } from './api.js';
    document.getElementById('saveButton').addEventListener('click', () => {
      const table = document.getElementById('myTable');
      const data = [];

      for (let i = 1; i < table.rows.length; i++) {  // Empieza en 1 para omitir el encabezado
        const row = table.rows[i];
        const rowData = {
          ip: row.cells[0].innerText,
          pn: row.cells[1].innerText,
          sn: row.cells[2].innerText,
          pa: row.cells[3].innerText,
          sa: row.cells[4].innerText,
          ap: row.cells[5].innerText,
          apq: row.cells[0].innerText
        };
        data.push(rowData);
      }

      if (data.length === 0) {
        alert('No hay datos para guardar');
        return;
      }

      saveTableData2(data).then(response => {
        alert('Datos guardados con éxito: ' + response.message);
        window.location.href = '/cargausuarios'; // Redirigir al usuario si es necesario

      }).catch(error => {
        console.error('Error al guardar los datos:', error);
        alert('Error al guardar los datos');
      });
    });
  </script>
  <%- include('partials/footer') %>  
</body>
</html>
