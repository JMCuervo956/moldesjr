<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Informe de Inspecci贸n</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    table { border-collapse: collapse; width: 100%; margin-bottom: 30px; }
    th, td { border: 1px solid #ccc; padding: 8px; vertical-align: top; }
    th { background-color: #f2f2f2; }
    .encabezado {
      font-weight: bold;
      background-color: #e9e9e9;
    }
  </style>
</head>
<body>
  <h1>Informe de Inspecci贸n de Items</h1>

  <button onclick="exportTableToExcel()">Exportar a Excel</button>

  <% let lastGroup = ''; %>
  <% rows.forEach((row, index) => { 
       const groupKey = `${row.func_doc}|${row.funcionario}|${row.ocompra}|${row.fecha_inspeccion}`;
       const showGroupHeader = groupKey !== lastGroup;
       if (showGroupHeader) {
  %>
    <% if (index !== 0) { %></tbody></table><% } %>
    <table>
      <thead>
        <tr>
          <td class="encabezado" colspan="4">
            Funcionario: <%= row.funcionario || 'Sin nombre' %> (<%= row.func_doc %>)<br>
            Orden de compra: <%= row.ocompra %><br>
            Fecha inspecci贸n: <%= new Date(row.fecha_inspeccion).toLocaleDateString('es-CO') %>
          </td>
        </tr>
        <tr>
          <th>No</th>
          <th>Aspecto</th>
          <th>No</th>
          <th>Observaci贸n</th>
        </tr>
      </thead>
      <tbody>
  <% } %>

        <tr>
          <td><%= row.no %></td>
          <td><%= row.aspecto %></td>
          <td><%= row.no_ %></td>
          <td><%= row.observacion %></td>
        </tr>

  <% lastGroup = groupKey; }) %>
  </tbody></table>

  <script>
    function exportTableToExcel() {
      const tables = document.querySelectorAll('table');
      let html = '';
      tables.forEach(table => html += table.outerHTML + '<br><br>');

      const blob = new Blob(['\ufeff' + html], {
        type: 'application/vnd.ms-excel'
      });

      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'informe.xls';
      a.click();
      URL.revokeObjectURL(url);
    }
  </script>
</body>
</html>
