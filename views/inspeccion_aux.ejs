<script>

document.querySelectorAll('.btn-show-observacion').forEach(btn => {
  btn.addEventListener('click', function() {
    const texto = this.getAttribute('data-observacion');
    const fecha = this.getAttribute('data-fecha');
    const renglon = this.getAttribute('data-renglon');

    document.getElementById('modalObservacionTexto').innerText = texto;
    document.getElementById('modalObservacionDetalle').textContent = `Fecha: ${fecha} - Ítem No: ${renglon}`;

    const myModal = new bootstrap.Modal(document.getElementById('observacionModal'));
    myModal.show();
  });
});


</script>

<script>  
  const params = new URLSearchParams(window.location.search);
  document.querySelectorAll('.btn-ir-a-detalle').forEach(boton => {
    boton.addEventListener('click', function () {
      console.log('Dataset completo:', this.dataset);
      const fecha = this.getAttribute('data-fecha');
      const doc_id = this.dataset.docId;
