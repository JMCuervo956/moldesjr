      if (fecha && doc_id) {
        const url = `/detalle-diaux?fecha=${encodeURIComponent(fecha)}&doc_id=${encodeURIComponent(doc_id)}&func=${encodeURIComponent(func)}`;
        window.location.href = url;
        } else {
          alert('Faltan datos para continuar.');
      }
    });
  });
</script>  

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Extraer los parámetros de la URL
    const params = new URLSearchParams(window.location.search);
    const docId = params.get("doc_id");
    const func = params.get("func");
    const tipFunc = params.get("tip_func");

    // Colocarlos en los inputs ocultos
    const inputDoc = document.getElementById("doc-id-hidden");
    const inputFunc = document.getElementById("func-hidden");
    const inputTip = document.getElementById("tip-func-hidden");

    if (inputDoc) inputDoc.value = docId || "";
    if (inputFunc) inputFunc.value = func || "";
    if (inputTip) inputTip.value = tipFunc || "";

    // Mostrar los datos en pantalla
    const datosDiv = document.getElementById("datos-doc");
    const spanDoc = document.getElementById("doc-id-display");
    const spanFunc = document.getElementById("func-display");

    if (docId && func) {
      if (datosDiv) {
        datosDiv.textContent = `${docId} | ${decodeURIComponent(func)}`;
      }
      if (spanDoc) {
        spanDoc.textContent = docId;
      }
      if (spanFunc) {
        spanFunc.textContent = decodeURIComponent(func);
      }
    }

    // Script para botones de detalle
    const botones = document.querySelectorAll('.btn-ir-a-detalle');
    const ahoraEnBogota = new Date(
      new Intl.DateTimeFormat('en-CA', {
        timeZone: 'America/Bogota',
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      }).format(new Date())
    );
    ahoraEnBogota.setHours(0, 0, 0, 0);

    botones.forEach(boton => {
      const fechaStr = boton.dataset.fecha;
      const fechaBoton = new Date(fechaStr);
      fechaBoton.setHours(0, 0, 0, 0);

      if (ahoraEnBogota > fechaBoton) {
        const divs = boton.querySelectorAll('div');
        const divFecha = Array.from(divs).find(div => div.textContent.trim() === fechaStr);

        if (divFecha) {
          divFecha.style.color = 'red';
          divFecha.style.fontWeight = 'bold';
        }

        boton.style.pointerEvents = 'none';
        boton.title = 'Fecha vencida';
      }
    });
  });
</script>

