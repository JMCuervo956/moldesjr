/* Columna fija 1: Nº (Encabezado y cuerpo) */
th.sticky-col,
td.sticky-col {
  position: sticky;
  left: 0;
  width: 60px;
  min-width: 60px;
  max-width: 60px;
  text-align: center;
  z-index: 2;
}

/* Fondo específico para el encabezado */
th.sticky-col {
  background: #98a3aa;
  z-index: 10;
}

/* Fondo específico para el cuerpo */
tbody td.sticky-col {
  background: #fff;
  z-index: 1;
}

/* Columna fija 2: Aspectos a Verificar (Encabezado y cuerpo) */
th.sticky-col-2,
td.sticky-col-2 {
  position: sticky;
  left: 60px; /* Suma del ancho anterior */
  width: 100px;
  min-width: 100px;
  max-width: 100px;
  text-align: left;
  white-space: normal;
  z-index: 2;
