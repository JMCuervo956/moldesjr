            <nav id="menu"></nav>
          <% } else { %>
            <nav id="menu2"></nav>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src="./main.js"></script>
  <script type="module" src="./pdf.js"></script>
