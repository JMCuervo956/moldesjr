<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Incluye SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/navigation') %>   
    <div class="content">
        <h5 style="font-size: 16px; color: #5f14b6; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);">Activar o Desactivar</h5>
        <p style="font-size: 20px;">
            <span style="color: #3498db; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Pregunta:</span> 
            <span style="color: #d11b33; text-shadow: 2px 1px 2px rgba(0, 0, 0, 0.3);"><%= texto %></span>
        </p>
        <br>

        <div class="register-form30"> 
            <form id="registerForm" action="/preguntasact" method='POST'> 
                <div class="contenedor__login-register">
                    <!-- Campo oculto con el mismo valor -->
                    <input type="hidden" name="ids" value="<%= id %>">
                    <!-- botones incluidos -->
                    <button type="submit" id="toggleButton" onclick="document.getElementById('respuesta').value = 'No';" >DesActiva</button>
                    <button type="submit" id="toggleButtonS" onclick="document.getElementById('respuesta').value = 'Sí';" >Activa</button>
                    <!-- Texto incluido para respuesta -->
                    <input type="hidden" id="respuesta" name="respuesta" value="No"> <!-- Campo oculto para la respuesta -->
                </div>       
            </form>    
        </div>
        <div style="display: inline;">
            <br><br>
            <a href="/ingpreguntas" class="btn btn-success btn-sm btnind-hover-effect"</a>Regresar</a>
        </div>

    </div>

    <script>
        document.getElementById('registerForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Evitar que el formulario se envíe de forma tradicional
            const formData = new FormData(this);
            const response = await fetch('/preguntasact', {
                method: 'POST',
                body: new URLSearchParams(formData)
            });
            const result = await response.json();
            Swal.fire({
                title: result.title || 'Error',
                text: result.message || 'Hubo un problema',
                icon: result.status,
                showConfirmButton: true,
                timer: result.status === 'success' ? 500 : null // Timer solo para éxito
            }).then(() => {
                if (result.status === 'success') {
                    window.location.href = '/ingpreguntas'; // Redirigir al usuario si es necesario
                }
            });
        });
    </script>
    <%- include('partials/footer') %>  
</body>
</html>

