<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Votacion</title>
    <%- include('partials/head') %>

    <style>
        /* Estilo personalizado para toda la alerta */
        .my-swal-popup {
            background-color: #f0f8ff; /* Color de fondo */
            color: #000; /* Color del texto */
        }

        /* Estilo personalizado para la barra de progreso */
        .my-progress-bar {
            background-color: #c92014; /* Color de la barra de progreso */
        }

        /* Estilo del botón */
        .my-confirm-button {
            background-color: #007bff; /* Color del botón de aceptar */
            color: #fff; /* Color del texto del botón */
        }
    </style>
</head>
<body class="body.imagen">
    <%- include('partials/navigation') %>
    <h1></h1>
    <div class="content">
        <th style="font-size: 8px;"> <br> [ Respuestas = 0 ] no permite seleccionar para Votar</th>

        <div class="register-formAncho">    
            <% if (data && data.length > 0) { %>
                <div style="font-size: 20px;"> 
                    <form id="registerForm" onsubmit="enviarSeleccion(event)">
                        <table class="table table-no-borders" style="width: 70%; margin: 0 auto;">
                            <thead>
                                <tr>
                                    <th>Pregunta</th>
                                    <th></th>
                                    <th># Respuestas</th>
                                </tr>                        
                            </thead>
                            <tbody>
                                <% data.forEach(function(item) { %>
                                    <tr>
                                        <td>
                                            <div class="radio-group">
                                                <input type="radio" name="pregunta" value="<%= item.id %>" 
                                                       <%= item.estado === 1 ? 'checked' : '' %>
                                                       <%= item.opc === 0 ? 'disabled' : '' %> 
                                                       data-id="<%= item.id %>">
                                                <label><%= item.texto %></label>
                                            </div>
                                        </td>
                                        <td>
                                            <select name="selactivo" class="select-estado" style="width: 100%; max-width: 600px; height: 40px; padding: 8px; font-size: 16px; box-sizing: border-box; color: #888; display: none;" disabled>
                                                <option value="0" <%= parseInt(item.activo) === 0 ? 'selected' : '' %>>0</option>
                                                <option value="1" <%= parseInt(item.activo) === 1 ? 'selected' : '' %>>1</option>
                                            </select>
                                        </td>
                                        <td class="ocultar-columna">
                                            <input type="text" name="selactivo" class="input-estado" value="<%= item.activo %>" data-id="<%= item.id %>">
                                        </td>
                                        <td>
                                            <div>
                                                <label style="color: <%= item.opc === 0 ? 'red' : 'inherit' %>;">
                                                    <%= item.opc %>
                                                </label>
                                            </div>
                                        </td>

                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        <br>
                        <a href="/menuprc" class="btn-cancel"> Regresar </a>
                        <input type="submit" class="btn-save" value="Actualizar">
                    </form>
                </div>    
            <% } else { %>
                <p>No hay preguntas disponibles en este momento.</p>
            <% } %>
        </div>
    </div>     

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Función para actualizar la celda de activo cuando se selecciona una pregunta
        document.addEventListener('DOMContentLoaded', function() {
            // Agregar un event listener para todos los radio buttons
            document.querySelectorAll('input[name="pregunta"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    // Obtener el ID de la pregunta seleccionada
                    const questionId = this.value;
                    
                    // Buscar el select de activo correspondiente a esta pregunta
                    const selectActivo = document.querySelector(`select[name="selactivo"][data-id="${questionId}"]`);
                    
                    // Establecer el valor del select a "1"
                    if (selectActivo) {
                        selectActivo.value = '1'; // Cambiar el valor del select a "1"
                    }

                    // También podemos actualizar la celda de "Activo" visible
                    const inputEstado = document.querySelector(`input[name="selactivo"][data-id="${questionId}"]`);
                    if (inputEstado) {
                        inputEstado.value = '1'; // Actualizar el valor del input oculto a "1"
                    }
                });
            });
        });

        // Función para enviar la selección
        async function enviarSeleccion(event) {
            event.preventDefault(); // Evita que el formulario se envíe de forma predeterminada
    
            // Obtener las preguntas seleccionadas
            const selectedValues = Array.from(document.querySelectorAll('input[name="pregunta"]:checked')).map(checkbox => checkbox.value);
    
            // Obtener los valores de selactivo para cada pregunta seleccionada
            const selActivoValues = selectedValues.map(id => {
                const selActivoInput = document.querySelector(`input[name="selactivo"][data-id="${id}"]`);
                return selActivoInput ? selActivoInput.value : null;
            });
    
            try {
                const response = await fetch('/procesar-seleccion', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        pregunta: selectedValues, 
                        selactivo: selActivoValues 
                    })
                });
             
                const result = await response.json();
            
                // Mostrar el SweetAlert basado en la respuesta
                if (result.status === 'success') {
                    Swal.fire({
                        title: result.title || 'Éxito',
                        text: result.message || 'Operación realizada correctamente',
                        icon: result.status,
                        showConfirmButton: true,
                        timer: result.status === 'success' ? 500 : null,
                        timerProgressBar: true,
                        customClass: {
                            popup: 'my-swal-popup',
                            progressSteps: 'my-progress-bar',
                            confirmButton: 'my-confirm-button'
                        }
                    }).then((result) => {
                        if (result.dismiss === Swal.DismissReason.timer) {
                            window.location.href = '/menuprc'; 
                        }
                    });
                } else {
                    Swal.fire({
                        title: result.title || 'Error',
                        text: result.message || 'Hubo un problema',
                        icon: 'error',
                        confirmButtonText: 'Aceptar',
                    });
                }
            } catch (error) {
                Swal.fire({
                    title: 'Error',
                    text: 'Hubo un problema al procesar tu selección.',
                    icon: 'error',
                    confirmButtonText: 'Aceptar',
                    timer: 5000
                });
            }
        }
    </script>
    
    <%- include('partials/footer') %>  
</body>
</html>
