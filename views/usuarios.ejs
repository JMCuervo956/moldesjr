<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>MJR - Usuarios</title>
    <%- include('partials/head') %>
    <style>
        table {
          font-size: 14px; /* Tamaño de fuente más pequeño */
          line-height: 0.6; /* Reduce el espacio entre líneas */
          border-collapse: collapse; /* Para evitar doble borde */
          width: 100%;
        }

        th {
            border: 1px solid rgb(247, 244, 244);
            padding: 8px;
            text-align: left;
        }
        .successImage {
            display: none; /* Ocultar inicialmente */
            width: 50px; /* Ajusta el tamaño según necesites */
            margin-top: 10px; /* Espacio superior */
        }
    </style>
</head>

<body>
    <%- include('partials/navigation') %>  
    <h5 style="font-size: 14px; color: blue; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); transition: color 0.3s ease;" 
        onmouseover="this.style.color='darkblue';" 
        onmouseout="this.style.color='blue';">
        <span style="padding-left: 10px;"><%= name %></span>
    </h5>
    <br>
    <div class="content">
        <div class="register-formAncho"> 
            <div class="container mt-1">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>
                            <h4>Usuarios</h4>
                            <a href="/menuprc" class="btn btn-success btn-sm btnind-hover-effect">Regresar</a>
                            <a href="/register" class="btn btn-primary btn-sm btnind-hover-effect">Adicionar</a>
                            <a href="/consultausr" class="btn btn-info btn-sm btnind-hover-effect">Consulta</a>
                        </th>
                    </thead>        
                </table>
            </div>
            <div class="container mt-1">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Nombre</th>
                            <th>Rol</th>
                        </tr>                        
                    </thead>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% data.forEach(function(item) { %>
                                <tr>
                                    <td class="tex-hover-effect" style="width: 100px;"><%= item.user %></td>
                                    <td class="tex-hover-effect" style="width: 400px;"><%= item.name %></td>
                                    <td class="tex-hover-effect" style="width: 400px;"><%= item.rol %></td>
                                    <td>
                                        <a href="/moduser?user=<%= item.user %>&name=<%= item.name %>&rol=<%= item.rol %>&estado=<%= item.estado %>" class="btn btn-warning btn-sm btn-hover-effect ">Mod</a>
                                    </td>
                                    <td>
                                        <a href="/eliuser?user=<%= item.user%>&name=<%= item.name %>" class="btn btn-danger btn-sm btn-hover-effect ">Ret</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %> 
                            <tr>
                                <td colspan="5">No hay datos disponibles</td>   
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <script>
        function checkValue(input) {
            console.log('imagen'); // Este mensaje debería aparecer
            const successImage = input.parentElement.querySelector('.successImage');
            if (parseInt(input.value) === 0) {
                successImage.style.display = 'block'; // Mostrar imagen
            } else {
                successImage.style.display = 'none'; // Ocultar imagen
            }
        }
    </script>
</body>
</html>
