<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Asamblea</title>
    <%- include('partials/head') %>
    <style>
        th {
            border: 1px solid rgb(247, 244, 244);
            padding: 8px;
            text-align: left;
        }
        .successImage {
            display: none; /* Ocultar inicialmente */
            width: 50px; /* Ajusta el tamaño según necesites */
            margin-top: 10px; /* Espacio superior */
        }
    </style>
</head>

<body>
    <%- include('partials/navigation') %>  
    <h5 style="font-size: 14px; color: blue; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); transition: color 0.3s ease;" 
        onmouseover="this.style.color='darkblue';" 
        onmouseout="this.style.color='blue';">
        <span style="padding-left: 10px;"><%= name %></span>
    </h5>
    <br>
    <div class="content">
        <div class="register-formAncho">    
            <div>
                <div class="container mt-1">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <th>
                                <h4>Resultados </h4>
                                <a href="/menuprc" class="btn btn-success btn-sm btnind-hover-effect">Regresar</a>
                            </th>
                        </thead>        
                    </table>
                </div>
                <div class="container mt-1">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Pregunta</th>
                                <th>Ver</th>
                                <th>Totales</th>
                            </tr>                        
                        </thead>
                        <tbody>
                            <% if (data && data.length > 0) { %>
                                <% data.forEach(function(item) { %>
                                    <tr>
                                        <td class="tex-hover-effect" style="width: 400px;"><%= item.texto %></td>
                                        <td>
                                            <!-- Asignamos un ID único a cada enlace -->
                                            <a href="javascript:void(0);" class="btn btn-primary btn-sm btn-hover-effect" id="resultadoLink_<%= item.id %>">Grafico</a>
                                        </td>
                                        <td>
                                            <!-- Asignamos un ID único a cada enlace -->
                                            <a href="javascript:void(0);" class="btn btn-warning btn-sm btn-hover-effect" id="resultadoLink_<%= item.id %>">Resultado</a>
                                        </td>

                                    </tr>
                                <% }); %>
                            <% } else { %> 
                                <tr>
                                    <td colspan="5">No hay datos disponibles</td>   
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        <% if (data && data.length > 0) { %>
            <% data.forEach(function(item) { %>
                document.getElementById('resultadoLink_<%= item.id %>').addEventListener('click', function() {
                    // Obtener el valor de idp y texto correspondiente a cada item
                    const idPregunta = '<%= item.id %>';  // Usamos el valor correspondiente a cada item
                    const textoPregunta = '<%= item.texto %>'; // Usamos el valor de texto también
                
                    // Redirigir a la página de gráficos, pasando idp y texto como parámetros en la URL
                    window.location.href = `/bar_resul?idp=${idPregunta}&texto=${encodeURIComponent(textoPregunta)}`; // Pasa idp y texto en la URL
                });
            <% }); %>
        <% } %>
    </script>

    <%- include('partials/footer') %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
</body>
</html>
