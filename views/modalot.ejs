<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Consulta Ordenes de Trabajo</title>
  <link rel="stylesheet" href="/css/style.css">
  

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .modal-container {
      display: none;
      position: fixed;
      z-index: 9999;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .modal-overlay {
      position: absolute;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.2);
    }

    .modal-content {
      position: absolute;
      top: 10%;
      left: 50%;
      transform: translateX(-50%);
      background-color: rgba(251, 253, 249, 0.8);
      backdrop-filter: blur(5px);
      padding: 20px;
      width: 80%;
      max-width: 1000px;
      border-radius: 6px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .modal-title {
      font-size: 22px;
      font-weight: bold;
      margin-bottom: 20px;
      text-align: center;
      background: linear-gradient(90deg, #007bff, #BA1A1A, #007bff);
      background-size: 200% auto;
      color: transparent;
      background-clip: text;
      -webkit-background-clip: text;
      animation: shimmer 3s linear infinite;
    }

    @keyframes shimmer {
      to {
        background-position: 200% center;
      }
    }

    .modal-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    .modal-table tr {
      border-bottom: 1px solid #ccc;
    }

    .modal-table td {
      padding: 2px 4px;
      vertical-align: top;
    }

    .modal-table td:first-child {
      width: 25%;
      font-weight: bold;
      color: #2a3d66;
    }

    .modal-table td[colspan="2"] {
      width: 75%;
    }

    .resaltado {
      background-color: #e6f2ff;
      border-left: 4px solid #BA1A1A;
      font-weight: bold;
      animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
      from {
        background-color: #fff3cd;
      }
      to {
        background-color: #e6f2ff;
      }
    }

    .modal-footer {
      margin-top: 20px;
      text-align: right;
    }

    .modal-button {
      padding: 6px 12px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .modal-button:hover {
      background-color: #0056b3;
    }

     .imagen-fondo {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: contain;
      z-index: 0;
      opacity: 0.5;
    }

    .modal-close {
      display: none !important;
    }

    .modal-table tr td:nth-child(2),
    .modal-table tr td:nth-child(3) {
      padding-left: 6px;
      padding-right: 6px;
      width: auto;
    }

    .modal-table tr td:nth-child(3) {
      white-space: nowrap;
    }

    .modal-table td.col {
      width: 25%;
      padding-left: 4px;
      padding-right: 4px;
      white-space: nowrap;
    }

    .modal-table td.sin-negrilla {
      font-weight: normal;
    }

    .boton-contenedor {
      display: flex;
      gap: 20px;
      margin-left: 3rem;
      flex-wrap: wrap; /* Permite que pasen a otra línea si no hay espacio */
    }  

    .boton-regresa-fijo {
      padding: 10px 20px;
      text-decoration: none;
      background-color: #134d05;
      color: white;
      border-radius: 4px;
      white-space: nowrap; /* Evita que el texto se divida en varias líneas */
    }

    .boton-inicio-fijo {
      padding: 10px 20px;
      text-decoration: none;
      background-color: #031047;
      color: white;
      border-radius: 4px;
      white-space: nowrap; /* Evita que el texto se divida en varias líneas */
    }


  </style>
</head>
<body>
  <div id="activities" style="
    border: 2px solid #f0f8ff;
    padding: 4px;
    border-radius: 6px;
    background-color: #aa2323;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: 20px; /* Espacio entre botón y título */
  ">
    <a href="/menuprc" class="regresar-link" style="margin-left: 20px;">Inicio</a>
    <div style="margin-left: auto; padding-right: 20px;">
      <h4 style="margin: 0; color: #ffffff;">Moldes JR</h4>
    </div>    
  </div>
  <script type="module">
    import { Modalot } from '/modalot.js';
    const datos = <%- JSON.stringify(datos) %>;
    const modalot = new Modalot({
      title: 'Consulta Ordenes de Trabajo',
      content: `
        <table class="modal-table">
          <tr class="resaltado">
            <td><strong>Orden de Trabajo:</strong></td>
            <td colspan="2">${datos.ot}</td>
          </tr>
          <tr>
            <td><strong>Descripción:</strong></td>
            <td colspan="2">${datos.descripcion}</td>
          </tr>
          <tr><td colspan="3" style="height: 16px;"></td></tr>

          <tr>
            <td class="sin-negrilla">Proveedor:</td>
            <td class="col">${datos.prov}</td>
            <td class="col">${datos.nprov}</td>
          </tr>
          <tr>
            <td class="sin-negrilla">Diseñador:</td>
            <td class="col">${datos.dise}</td>
            <td class="col">${datos.ndise}</td>
          </tr>
          <tr>
            <td class="sin-negrilla">Supervisor:</td>
            <td class="col">${datos.supe}</td>
            <td class="col">${datos.nsupe}</td>
          </tr>
          <tr>
            <td class="sin-negrilla">Soldador:</td>
            <td class="col">${datos.sold}</td>
            <td class="col">${datos.nsold}</td>
          </tr>

          <tr><td colspan="3" style="height: 16px;"></td></tr>
          <tr>
            <td><strong>Observación:</strong></td>
            <td colspan="2">${datos.comentarios}</td>
          </tr>
        </table>
        
        <div style="margin-top: 32px; margin-bottom: 32px;">
          <hr style="border: none; border-top: 1px solid #ccc;">
          <hr style="border: none; border-top: 1px solid #ccc;">
          <hr style="border: none; border-top: 1px solid #ccc;">
        </div>        

        <div class="boton-contenedor">
          <a href="/menuprc" class="boton-inicio-fijo">Inicio</a>
          <a href="/otrabajo" class="boton-regresa-fijo">Regresar</a>
        </div>  
      `
    });

    window.addEventListener('DOMContentLoaded', () => {
      modalot.open();
    });
  </script>
</body>
</html>
